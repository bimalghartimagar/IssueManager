<div class="overflow-y-auto h-96 border border-gray-200 shadow bg-white rounded p-2" style="@(tickets.Count<=0?"display: none":"")">
    <TicketList tickets="@tickets" />
</div>

@code {
    [Parameter]
    public List<Ticket> tickets { get; set; }
}